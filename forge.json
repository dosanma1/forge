{
    "$schema": "https://raw.githubusercontent.com/dosanma1/forge-cli/main/schemas/forge-config.v1.schema.json",
    "version": "1",
    "workspace": {
        "name": "forge",
        "forgeVersion": "1.0.0",
        "toolVersions": {
            "go": "1.24.0",
            "node": "24.11.1",
            "bazel": "7.4.1"
        },
        "github": {
            "org": "dosanma1"
        }
    },
    "newProjectRoot": ".",
    "projects": {
        "api": {
            "projectType": "service",
            "language": "go",
            "root": "api",
            "tags": ["backend", "service"],
            "architect": {
                "build": {
                    "builder": "@forge/bazel:build",
                    "options": {
                        "dockerfile": "Dockerfile",
                        "goVersion": "1.24.0",
                        "registry": "gcr.io/your-project",
                        "target": "/..."
                    },
                    "configurations": {
                        "development": {},
                        "local": {
                            "race": true
                        },
                        "production": {
                            "optimization": true,
                            "registry": "gcr.io/your-project"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "deploy": {
                    "deployer": "@forge/helm:deploy",
                    "options": {
                        "configPath": "deploy/helm",
                        "healthPath": "/health",
                        "namespace": "default",
                        "port": 8080
                    },
                    "configurations": {
                        "development": {
                            "namespace": "dev"
                        },
                        "local": {
                            "namespace": "default"
                        },
                        "production": {
                            "namespace": "prod"
                        }
                    },
                    "defaultConfiguration": "production"
                }
            },
            "metadata": {
                "deployment": {
                    "target": "helm"
                }
            }
        },
        "go-kit": {
            "projectType": "library",
            "language": "go",
            "root": "go/kit",
            "tags": ["library", "shared"],
            "architect": {
                "build": {
                    "builder": "@forge/bazel:build",
                    "options": {
                        "target": "/..."
                    },
                    "configurations": {
                        "production": {}
                    },
                    "defaultConfiguration": "production"
                }
            }
        }
    }
}
